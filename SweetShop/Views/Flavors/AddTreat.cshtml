@{
  Layout = "_Layout";
}

@model SweetShop.Models.Flavor

<h2>Add a '@Html.DisplayFor(model => model.Profile)' tag for a treat</h2>


@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" class="btn btn-outline-primary" />
}

<p>@Html.ActionLink("Back to flavor list", "Index")</p>